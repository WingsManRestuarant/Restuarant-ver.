<link rel="stylesheet" href="css/kanban.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="script/drag.js" defer></script>
<script src="script/todo.js" defer></script>
</head>

<body>
    <div class="board">
        <form id="todo-form">
            <input type="text" placeholder="New TODO..." id="todo-input" />
            <button type="submit">Add +</button>
        </form>

        <div class="lanes">
            <div class="swim-lane" id="todo-lane">
                <h3 class="heading">Queue</h3>

                <p class="task" draggable="true">Order 1</p>
                <p class="task" draggable="true">Order 2</p>
                <p class="task" draggable="true">Order 3</p>
            </div>

            <div class="swim-lane">
                <h3 class="heading">Cooking</h3>

                <p class="task" draggable="true">Order 4</p>
            </div>

            <div class="swim-lane">
                <h3 class="heading">Delivery</h3>

                <p class="task" draggable="true">Order 5</p>
            </div>
        </div>
        <div class="refresh">
            <!-- refresh bootstrap button -->
            <svg id="refresh-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-repeat" viewBox="0 0 16 16">
                <path
                    d="M11 5.466V4H5a4 4 0 0 0-3.584 5.777.5.5 0 1 1-.896.446A5 5 0 0 1 5 3h6V1.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192Zm3.81.086a.5.5 0 0 1 .67.225A5 5 0 0 1 11 13H5v1.466a.25.25 0 0 1-.41.192l-2.36-1.966a.25.25 0 0 1 0-.384l2.36-1.966a.25.25 0 0 1 .41.192V12h6a4 4 0 0 0 3.585-5.777.a.5.5 0 0 1 .225-.67Z" />
            </svg>
            <!-- JS refresh script -->
            <script>
                document.getElementById("refresh-icon").addEventListener("click", function () {
                    location.reload();
                });
            </script>
        </div>
</body>